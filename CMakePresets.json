{
    "version": 3,
	"configurePresets": [
		{
			"name": "windows-base",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"installDir": "${sourceDir}/out/install/${presetName}",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl.exe",
				"CMAKE_CXX_COMPILER": "cl.exe",
				"TARGET_WINDOWS": true,
				"TARGET_LINUX": false
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "x64-debug-windows",
			"displayName": "x64 Debug Windows",
			"inherits": "windows-base",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"SSS_DEBUG": true
			}
		},
		{
			"name": "x64-release-windows",
			"displayName": "x64 Release Windows",
			"inherits": "windows-base",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"SSS_RELEASE": true,
				"SSS_DEBUG": false
			}
		},
		{
			"name": "x64-prod-windows",
			"displayName": "x64 Prod Windows",
			"inherits": "windows-base",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"SSS_PROD": true
			}
		},
		{
			"name": "linux-base",
			"hidden": true,
			"generator": "Unix Makefiles",
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"installDir": "${sourceDir}/out/install/${presetName}",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl.exe",
				"CMAKE_CXX_COMPILER": "cl.exe",
				"TARGET_LINUX": true,
				"TARGET_WINDOWS": false
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "x64-debug-linux",
			"displayName": "x64 Debug Linux",
			"inherits": "linux-base",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"SSS_DEBUG": true
			}
		},
		{
			"name": "x64-release-linux",
			"displayName": "x64 Release Linux",
			"inherits": "linux-base",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"SSS_RELEASE": true,
				"SSS_DEBUG": false
			}
		},
		{
			"name": "x64-prod-linux",
			"displayName": "x64 Prod Linux",
			"inherits": "linux-base",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"SSS_PROD": true
			}
		}
	]
}
